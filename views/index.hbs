<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..."
            value="{{keyword}}"
            aria-describedby="search-button"
          />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="container mt-3 text-center">
  <a class="btn btn-primary" href="/restaurants/new"><i class="fas fa-plus"> 新增</i></a>
</div>
{{#if restaurants}}

  <!-- restaurant list -->
  <div class="container mt-3">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="card-columns">
          {{#each restaurants}}
            <a href="/restaurants/{{this._id}}" class="text-secondary">
              <div class="card mb-3">
                <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">{{this.name}}</h6>
                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i>
                    {{this.category}}
                  </div>
                  <div class="d-flex justify-content-between">
                    <div>
                      <span class="badge badge-pill badge-danger font-weight-normal">
                        {{this.rating}}
                        <i class="fas fa-star fa-xs"></i>
                      </span>
                    </div>
                    <div>
                      <form action="/restaurants/{{this._id}}" method="GET" style="display: inline;">
                        <button class="btn btn-link p-0 align-top" type="submit"><i class="fas fa-eye"></i></button>
                      </form>
                      <form action="/restaurants/{{this._id}}/edit" method="GET" style="display: inline;">
                        <button class="btn btn-link p-0 align-top" type="submit"><i class="fas fa-pencil-alt"></i></button>
                      </form>
                      <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
                        <button class="btn btn-link p-0 align-top" type="submit"><i class="fas fa-trash-alt"></i></button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

{{else}}

  <!-- nothing to display -->
  <div class="d-flex flex-column align-items-center mt-5">
    <h1 class="h1">😱竟然有我不知道的美食</h1>
    <a class="btn btn-info mt-3" href="/">返回首頁</a>
  </div>

{{/if}}