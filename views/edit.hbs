<div class="container mt-5 restaurant-new-form">
  <h2 class="text-info">編輯餐廳</h2>
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">店名</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="輸入店名" value="{{restaurant.name}}" required />
    </div>
    <div class="form-group">
      <label for="name_en">英文店名</label>
      <input type="text" class="form-control" id="name_en" name="name_en" placeholder="輸入英文店名" value="{{restaurant.name_en}}" required />
    </div>
    <div class="form-group">
      <label for="category" class="form-label">餐廳類別</label>
      <input class="form-control" list="categoryOptions" id="category" name="category" placeholder="輸入餐廳類別" value="{{restaurant.category}}" required />
      <datalist id="categoryOptions">
        <option value="中東料理"></option>
        <option value="日本料理"></option>
        <option value="義式餐廳"></option>
        <option value="美式"></option>
        <option value="酒吧"></option>
        <option value="咖啡"></option>
      </datalist>
    </div>
    <div class="form-group">
      <label for="image">圖片網址</label>
      <input
        type="url"
        class="form-control"
        id="image"
        name="image"
        placeholder="輸入圖片網址 https://.*"
        pattern="https://.*"
        value="{{restaurant.image}}"
        required
      />
    </div>
    <div class="form-group">
      <label for="location">地址</label>
      <input type="text" class="form-control" id="location" name="location" placeholder="輸入地址" value="{{restaurant.location}}" required />
    </div>
    <div class="form-group">
      <label for="phone">電話</label>
      <input type="text" class="form-control" id="phone" name="phone" placeholder="輸入電話" value="{{restaurant.phone}}" required />
    </div>
    <div class="form-group">
      <label for="google_map">Google Map 網址</label>
      <input
        type="url"
        class="form-control"
        id="google_map"
        name="google_map"
        placeholder="輸入 Google Map 網址 https://goo.gl/maps/.*"
        pattern="https://goo.gl/maps/.*"
        value="{{restaurant.google_map}}"
        required
      />
    </div>
    <div class="form-group">
      <label for="rating">評分</label>
      <input
        type="number"
        step="0.1"
        min="0"
        max="5"
        class="form-control"
        id="rating"
        name="rating"
        placeholder="輸入評分"
        value={{restaurant.rating}}
        required
      />
    </div>
    <div class="form-group">
      <label for="description">介紹</label>
      <input type="textarea" class="form-control" id="description" name="description" placeholder="輸入介紹" value="{{restaurant.description}}" required />
    </div>
    <button type="submit" class="btn btn-primary">確定</button>
    <a href="/" class="btn btn-primary">返回</a>
  </form>
</div>